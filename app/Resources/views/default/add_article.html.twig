{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="color: pink;">Ajout d'un article</h1>

    {{ form_start(form) }}

    <div style="display: block;">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}
        {{ form_errors(form.nom) }}
        <br>
        {{ form_row(form.contenu) }}
        <br>
        {{ form_row(form.categorie) }}
    </div>

    {{ form_widget(form.submit) }}

    {{ form_end(form) }}
{% endblock body %}