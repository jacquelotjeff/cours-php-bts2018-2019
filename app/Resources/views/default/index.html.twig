{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des articles</h1>
    {% for article in articles %}
        <h3>{{ article.nom }}</h3>
        <p>{{ article.contenu }}</p>
        <p>
            >> <a href="{{ path('show_article', {
                'idArticle': article.id
            }) }}">Voir l'article</a>
        </p>
    {% endfor %}
{% endblock %}
